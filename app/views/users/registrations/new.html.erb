<div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading text-center">
            <h3>Groceries Delivered To You</h3>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%# f.error_notification %>
            <div class="panel-body">
            	<%= f.input :email, required: true, autofocus: true, input_html: { class: 'input-lg' } %>
			    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: 'input-lg' } %>
			    <%= f.input :password_confirmation, required: true, input_html: { class: 'input-lg' } %>
				<%= f.button :submit, "Sign up", class: 'btn-lg btn-success btn-block' %>
            </div>
          <% end %>
          <p><small>Already have an account? <%= render "users/shared/links" %></small></p>
        </div>
      </div>
    </div>
  </div>